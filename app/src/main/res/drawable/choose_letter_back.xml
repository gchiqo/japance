<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="7dp" />
    <padding
        android:bottom="3sp"
        android:left="3sp"
        android:right="3sp"
        android:top="3sp" />

    <gradient
        android:angle="90"
        android:endColor="#20FFFFFF"
        android:startColor="#6B000000" />
    <stroke
        android:width="1sp"
        android:color="#2B2B2B"
        android:dashWidth="4dp"
        android:dashGap="4dp" />



</shape>